<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= image_tag("http://placehold.it/242x200", size: "242x200") %>
          <div class="caption">
            <h3><%= post.name %></h3>
            <p><%= post.content %></p>
            <div class="btn-group btn-group-justified">
              <%= link_to "Show", post, method: :get, class: "btn btn-primary", role: "button" %>
              <%= link_to "Edit", edit_post_path(post), class: "btn btn-warning", role: "button" %>
              <%= link_to "Delete", post, method: :delete, class: "btn btn-danger", role: "button", data: {confirm: "Are you sure?"} %>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>

